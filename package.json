{
  "name": "@iobroker/json-config",
  "description": "This package contains the ioBroker JSON config UI components",
  "version": "8.0.5",
  "author": {
    "name": "bluefox",
    "email": "dogafox@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ioBroker/json-config.git"
  },
  "bugs": {
    "url": "https://github.com/ioBroker/json-config/issues"
  },
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias && node after_build",
    "clean": "rimraf build",
    "prepublishOnly": "npm run build",
    "build:ts": "tsc -p tsconfig.json",
    "lint": "eslint -c eslint.config.mjs",
    "test": "tsc -p test/tsconfig.build.json && node test/testSchema.js",
    "tsc-test": "tsc -p test/tsconfig.build.json",
    "release": "release-script --noPush --yes --lf",
    "release-patch": "release-script patch --yes --lf",
    "release-minor": "release-script minor --yes --lf",
    "release-major": "release-script major --yes --lf",
    "update-packages": "npx -y npm-check-updates --upgrade"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@iobroker/adapter-react-v5": "^8.0.5",
    "@module-federation/runtime": "^0.21.1",
    "@mui/x-date-pickers": "^7.29.4",
    "crypto-js": "^4.2.0",
    "json5": "^2.2.3",
    "react-ace": "^14.0.1",
    "react-qr-code": "^2.0.18"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@iobroker/build-tools": "^2.0.15",
    "@iobroker/eslint-config": "^2.2.0",
    "@types/crypto-js": "^4.2.2",
    "@types/json5": "^2.2.0",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.26",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^18.3.7",
    "ajv": "^8.17.1",
    "react-color": "^2.19.3",
    "tsc-alias": "^1.8.16"
  },
  "files": [
    "build/",
    "LICENSE"
  ]
}
